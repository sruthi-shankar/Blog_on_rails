<% if @post.errors.present? %>
    <p>
        <%= @post.errors.full_messages.join(', ') %>
    </p>
<% end %>

<%= form_with  model: @post, local: true do |f| %>
    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control', cols: 50, rows: 5 %>
    </div>
  
    <%= f.submit %>
<% end %>